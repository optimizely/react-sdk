{
  "compilerOptions": {
    "declaration": true,
    "target": "es5",
    "lib": ["es2015", "dom"],
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": false,
    "strictNullChecks": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declarationDir": "./dist",
    "outDir": "./lib",
    "esModuleInterop": true
  },
  "include": ["./src"],
  "exclude": ["./node_modules", "./src/**/*.spec.tsx", "./src/**/*.spec.ts"]
 }
